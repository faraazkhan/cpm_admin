<%= semantic_form_for [:admin, @user] do |f| %>
  <%= f.inputs "User" do %>
    <%= f.input :name %>
    <%= f.input :role %>
    <%= f.input :email, :input_html => { :disabled => true } %>
  <% end %>
  <%= f.inputs "Password" do %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit %>
    <li class="cancel"><%= link_to "Cancel", admin_users_path %></li>
  <% end %>
<% end %>
