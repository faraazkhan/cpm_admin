<!DOCTYPE html>
<html>
  <head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "HP-GDCPM" %></title>
  <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "HP-GDCPM" %>">
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <header>
        <%= render 'layouts/header' %>
      </header>
      <% if current_user %>
        <%= render 'layouts/authenticated' %>
      <% else %>
        <%= render 'layouts/login' %>
      <% end %> 
      <footer>
        <%= render 'layouts/footer' %>
      </footer>
    </div>
  </body>
</html>
